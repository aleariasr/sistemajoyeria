    "test:pos": "npm run test:pos --workspace=backend",
    "test:e2e:pos": "npm run test:frontend --workspace=frontend",
    "test:notifications": "npm run test:notifications --workspace=backend",
    "test:orders": "npm run test:orders --workspace=backend",
    "test:auth": "npm run test:auth --workspace=backend",
    "test:full": "node scripts/test-orchestrator.js",
